{
  "name": "shoebox",
  "productName": "shoebox",
  "version": "2.2.6",
  "description": "Multimedia browser",
  "main": "app/main/main.js",
  "type": "module",
  "build": {
    "appId": "com.gmail.marvbudd.shoebox",
    "dmg": {
      "background": null,
      "backgroundColor": "#ffffff",
      "window": {
        "width": "400",
        "height": "300"
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 300,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Marvbudd",
        "repo": "shoebox",
        "vPrefixedTagName": true,
        "publishAutoUpdate": true
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "com.marvbudd.media.shoebox"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "scripts": {
    "start": "electron app/main/main.js",
    "pack": "electron-builder --dir",
    "electron-builder": "electron-builder",
    "build": "electron-builder build --publish never",
    "deploy": "electron-builder build --publish always",
    "dist": "electron-builder --publish always",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "cert": "electron-builder create-self-signed-cert",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Marvbudd/shoebox.git"
  },
  "postinstall": "electron-builder install-app-deps",
  "keywords": [
    "genealogy",
    "media",
    "video",
    "audio",
    "photo"
  ],
  "author": {
    "name": "Marvin E Budd",
    "email": "marvbudd@gmail.com"
  },
  "license": "MIT",
  "copyright": "Copyright Â© 2001-2025, Marvin E Budd",
  "dependencies": {
    "electron-updater": "^6.7.3",
    "exifr": "^7.1.3",
    "handlebars": "^4.7.8",
    "nconf": "^0.13.0"
  },
  "devDependencies": {
    "electron": "^37.10.3",
    "electron-builder": "26.3.5"
  },
  "packageManager": "yarn@4.12.0"
}
