{
  "name": "shoebox",
  "productName": "shoebox",
  "version": "1.1.3",
  "description": "Multimedia browser",
  "main": "app/main/index.js",
  "module": "app/main/main.js",
  "build": {
    "appId": "com.gmail.marvbudd.shoebox",
    "mac": {
      "category": "com.marvbudd.media.shoebox",
      "icon": "app/resource/icons/icon.icns"
    },
    "win": {
      "target": "portable",
      "icon": "app/resource/icons/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "app/resource/icons/1024x1024.png"
    }
  },
  "scripts": {
    "start": "electron app/main/index.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "cert": "electron-builder create-self-signed-cert"
  },
  "postinstall": "electron-builder install-app-deps",
  "keywords": [],
  "author": "Marvin E Budd <marvbudd@gmail.com>",
  "license": "MIT",
  "copyright": "Copyright Â© 2001-2022 ${author}",
  "dependencies": {
    "esm": "^3.2.25",
    "handlebars": "^4.7.7",
    "nconf": "^0.11.3",
    "xml2js": "^0.4.23",
    "xslt-processor": "^0.11.5"
  },
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13"
  }
}
