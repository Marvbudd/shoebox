{
  "name": "shoebox",
  "productName": "shoebox",
  "version": "1.1.7",
  "description": "Multimedia browser",
  "main": "app/main/index.js",
  "module": "app/main/main.js",
  "build": {
    "appId": "com.gmail.marvbudd.shoebox",
    "dmg": {
      "background": null,
      "backgroundColor": "#ffffff",
      "window": {
        "width": "400",
        "height": "300"
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 300,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "category": "com.marvbudd.media.shoebox"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "publish": [
        {
          "provider": "github"
        }
    ]
  },
  "scripts": {
    "start": "electron app/main/index.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "cert": "electron-builder create-self-signed-cert"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Marvbudd/shoebox"
  },
  "postinstall": "electron-builder install-app-deps",
  "keywords": [
    "genealogy",
    "media",
    "video",
    "audio",
    "photo"
  ],
  "author": {
    "name": "Marvin E Budd",
    "email": "marvbudd@gmail.com"
  },
  "license": "MIT",
  "copyright": "Copyright Â© 2001-2022 ${author}",
  "dependencies": {
    "esm": "^3.2.25",
    "handlebars": "^4.7.7",
    "nconf": "^0.11.3",
    "xml2js": "^0.4.23",
    "xslt-processor": "^0.11.5"
  },
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13"
  }
}
