{
  "name": "shoebox",
  "productName": "shoebox",
  "version": "3.0.0",
  "description": "Multimedia browser",
  "main": "app/main/main.js",
  "type": "module",
  "build": {
    "appId": "com.gmail.marvbudd.shoebox",
    "dmg": {
      "background": null,
      "backgroundColor": "#ffffff",
      "window": {
        "width": "400",
        "height": "300"
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 300,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Marvbudd",
        "repo": "shoebox",
        "vPrefixedTagName": true,
        "publishAutoUpdate": true
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "com.marvbudd.media.shoebox"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "scripts": {
    "start": "electron app/main/main.js",
    "dev": "vite",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build:vue": "yarn build:personManager && yarn build:createAccessions && yarn build:mediaManager && yarn build:updateCollection && yarn build:collectionManager && yarn build:mainWindow && yarn build:mediaPlayer && yarn build:collectionSetOperations",
    "build:mainWindow": "./scripts/build-vue.sh mainWindow",
    "build:mediaManager": "./scripts/build-vue.sh mediaManager",
    "build:personManager": "./scripts/build-vue.sh personManager",
    "build:createAccessions": "./scripts/build-vue.sh createAccessions",
    "build:updateCollection": "./scripts/build-vue.sh updateCollection",
    "build:collectionManager": "./scripts/build-vue.sh collectionManager",
    "build:mediaPlayer": "./scripts/build-vue.sh mediaPlayer",
    "build:collectionSetOperations": "./scripts/build-vue.sh collectionSetOperations",
    "preview": "vite preview",
    "pack": "electron-builder --dir",
    "electron-builder": "electron-builder",
    "build": "yarn build:vue && electron-builder build --publish never",
    "deploy": "yarn build:vue && electron-builder build --publish always",
    "dist": "yarn build:vue && electron-builder --publish always",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "cert": "electron-builder create-self-signed-cert",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Marvbudd/shoebox.git"
  },
  "postinstall": "electron-builder install-app-deps",
  "keywords": [
    "genealogy",
    "media",
    "video",
    "audio",
    "photo"
  ],
  "author": {
    "name": "Marvin E Budd",
    "email": "marvbudd@gmail.com"
  },
  "license": "MIT",
  "copyright": "Copyright Â© 2001-2026, Marvin E Budd",
  "dependencies": {
    "canvas": "^3.2.1",
    "electron-builder": "26.4.0",
    "electron-updater": "6.7.3",
    "exifr": "^7.1.3",
    "face-api.js": "^0.22.2",
    "handlebars": "^4.7.8",
    "nconf": "^0.13.0",
    "vite": "^7.3.1",
    "vitepress": "^1.6.4",
    "vue": "^3.5.27"
  },
  "packageManager": "yarn@4.12.0",
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "electron": "^40.0.0"
  }
}
